<h1>These are the notes</h1>

<%= @note.each do | note | %>
  <h2><%= link_to note.title, note %></h2>
  <p><%= time_ago_in_words(note.created_at) %></p>

<% end %>


<%= link_to "New Note", new_note_path %>


<div class="wrapper_with_padding">
  <div id="note" class="clearfix">
    <% unless @notes.blank? %>
      <% @notes.each do | note | %>
        <a href="<%= (url_for [note]) %>">
          <div class="note">
            <p class="title"><%= note.title %></p>
            <p class="date"><%= time_ago_in_words(note.created_at) %></p>
          </div>
        </a>
      <% end %>
    <% else %>
      <h2> Add A note</h2>
      <p>It appears you haven't created any notes yet..</p>
      <button>
        <%= link_to "Create A Note", new_note_path %>
      </button>
    <% end %>

  </div>
</div>
